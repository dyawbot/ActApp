<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guest_activity.guest_personal_info.GuestPersonalInformation">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SYMPTOMS"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            >

            <ImageButton
                android:id="@+id/imbtn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/v_back" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="First Name"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Middle Name"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Last Name"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:drawableEnd="@drawable/v_calendar"
                android:ems="10"
                android:hint="Birthday (mm/dd/yyyy)"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Gender"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint"
                android:background="@drawable/custom_edittext_bg"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Region"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Province"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Municipality"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edittext_bg"
                android:ems="10"
                android:hint="Barangay"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="?android:textColorHint" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/b_guest_personal_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_btn_bg"
        android:text="NEXT" />

</RelativeLayout>